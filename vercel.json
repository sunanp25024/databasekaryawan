{
  "buildCommand": "npm run build && cp -r public/* dist/public/",
  "outputDirectory": "dist/public",
  "framework": null,
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "application/manifest+json"
        }
      ]
    },
    {
      "source": "/(app-icon-.*\\.png|favicon.*\\.(png|ico)|swapro\\.png)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/png"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/sw.js",
      "destination": "/sw.js"
    },
    {
      "source": "/manifest.json",
      "destination": "/manifest.json"
    },
    {
      "source": "/swapro.png",
      "destination": "/swapro.png"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}